{
    "manifest_version": 3,
    "name": "Trello Points and Hours Calculator",
    "version": "1.1.0",
    "description": "Calculates total points and worked hours from Trello cards per column, respecting active filters.",
    "author": "Luiz Henrique Vitorino",
    "icons": {
      "16": "icons/16x16.png",
      "48": "icons/48x48.png",
      "128": "icons/128x128.png"
    },
    "content_scripts": [
      {
        "matches": ["https://trello.com/*"],
        "js": [
          "src/js/trello-dom.js",
          "src/js/calculator.js",
          "src/js/observer.js",
          "src/js/main.js"
        ],
        "css": [
          "src/css/styles.css"
        ]
      }
    ]
}
